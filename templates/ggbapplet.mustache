{{!
    @template qtype_geogebra/ggbapplet
    Template for displaying the advanced settings in the editor.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * none
    Example context (json):
    {
    }
}}
<div id="{{appletId}}"
  {{#dataattributes}} data-{{key}}="{{value}}" {{/dataattributes}}>
    <input type="hidden" id="answer-{{appletId}}" name="{{answerinputname}}" value="" size="80"/>
    <input type="hidden" id="xml-{{appletId}}" name="{{xmlinputname}}" value="" size="80"/>
    <input type="hidden" id="base64-{{appletId}}" name="{{base64inputname}}" value="{{currentbase64}} size="80"/>
</div>
<div id="ggbapplettarget-{{appletId}}"></div>
{{#js}}
    require(['qtype_geogebra/{{controller}}'], function(controller) {
        controller.init("{{appletId}}");
    });
{{/js}}




